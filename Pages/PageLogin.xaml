<Page x:Class="bistro.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"  
      xmlns:local="clr-namespace:bistro.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <Button Name="btnBack" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Content="Назад" Width="50" Height="50" Background="Transparent"
                BorderBrush="Transparent" Click="btnBack_Click"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="txbLogin" TextChanged="txbLogin_TextChanged" />
            <TextBox Name="psbPassword" TextChanged="psbPassword_TextChanged" Margin="5"/>
            <Button Name="btnLogin" Width="100" Content="Войти" Margin="5" 
                    Click="btnLogin_Click"/>
            <TextBlock Name="tbWarning" Text="Попробуйте еще раз" Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</Page>
